<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/home">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>  
    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">        
          <a class="nav-item nav-link" href="/urls">My URLs</a>

          <!-- Only user can create an url -->
          <% if( user_id ){ %>
            <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
          <% } else { %>  
           <a class="nav-item nav-link" href="/login">Login to Create New URL</a>
         <% } %>
          
      </ul>
         
      <!-- Header change depending on weather user is logged in or out -->
      <% if( user_id ){ %>

        <h5 class="form-inline my-2 my-lg-0" style="margin: 2em">Logged in with email : <%= user_id.email %> </h5>
       
        <form class="form-inline my-2 my-lg-0" method="POST" action="/logout"> 
                   
        <button type="submit" class="btn btn-outline-primary my-2 my-sm-0">Sign out</button>  
       </form>
      <% } else { %>  
        <a class="nav-item nav-link" href="/register">Sign up</a> 
        <a class="nav-item nav-link" href="/login">Sign in</a>

     <% } %>

    </div>
  </nav>
</header>